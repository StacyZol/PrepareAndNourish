<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_photo"
    tools:context="com.stacyzolnikov.prepareandnourish.MainActivity">

   <Button
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="@color/colorPrimaryDark"
       android:text="Sign up with Gmail"
       android:textAllCaps="false"
       android:layout_marginBottom="5dp"
       android:layout_marginEnd="40dp"
       android:layout_marginStart="40dp"
       android:id="@+id/gmailButton"
       android:gravity="center"
       android:layout_centerInParent="true"
       />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign up with Email"
        android:textAllCaps="false"
       android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/gmailButton"
        android:gravity="center"
        android:id="@+id/emailButton"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00000000"
        android:text="Skip customization"
        android:id="@+id/skipCustomizationButton"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>
